{% extends '@Shop/base.html.twig' %}

{% block content_content %}
    <div class="well well-sm">
        <h3>Product creation</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" href="{{ path('product_new') }}">Create a new product</a>
            <a class="btn btn-primary" href="{{ path('product_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            {{ form_start(form, {'attr':{'class':'well form-horizontal'}}) }}
            {{ form_errors(form) }}
                <div class="form-group">
                    <label class="control-label col-sm-2" for="name">{{ form_label(form.name) }}:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="description">{{ form_label(form.description) }}:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="price">{{ form_label(form.price) }}:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.price) }}
                        {{ form_errors(form.price) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock content_content %}



