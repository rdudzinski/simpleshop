{% extends '@Shop/base.html.twig' %}

{% block content_content %}
    <div class="well well-sm">
        <h3>Product edit</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" href="{{ path('product_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            {{ form_start(edit_form, {'attr':{'class':'well form-horizontal'}}) }}
            {{ form_errors(edit_form) }}
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">{{ form_label(edit_form.name) }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(edit_form.name) }}
                    {{ form_errors(edit_form.name) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="description">{{ form_label(edit_form.description) }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="price">{{ form_label(edit_form.price) }}:</label>
                <div class="col-sm-10">
                    {{ form_widget(edit_form.price) }}
                    {{ form_errors(edit_form.price) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
            {{ form_rest(edit_form) }}
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock content_content %}




