{% extends '@Shop/base.html.twig' %}

{% block content_content %}
    <div class="well well-sm">
        <h3>Product</h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" href="{{ path('product_index') }}">Back to the list</a>
            <a class="btn btn-primary" href="{{ path('product_edit', { 'id': product.id }) }}">Edit</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-primary">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock content_content %}



