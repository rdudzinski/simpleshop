{% extends '@Shop/base.html.twig' %}

{% block content_content %}
    <div class="well well-sm">
        <h3>Product</h3>
    </div>

    <div class="table-responsive">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('homepage') }}">Back to the list</a>

{% endblock content_content %}


